@{
    ViewData["Title"] = "Ana Sayfa";
    @model List<CustomerAutomationWeb.Models.CustomerViewModel>

}
@if (!string.IsNullOrEmpty(ViewBag.AlertMessage))
{
    <script type="text/javascript">
        alert("@ViewBag.AlertMessage");
    </script>

}

<div class="text-center">
    <h3>Müşteriler</h3>
</div>


<div class="mb-3">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Kimlik No</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Aksiyon</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <label>@item.TCKN</label>
                        </td>
                        <td>
                            <label>@item.Name</label>
                        <td>
                            <label>@item.LastName</label>
                        </td>
                        <td>
                            <a asp-controller="Customer" asp-action="Get" class="btn btn-primary btn-sm" asp-route-id="@item.Id"> Müşteri Bilgileri</a>&nbsp;
                            <form asp-action="Delete" asp-controller="Customer" method="post" asp-route-id="@item.Id">
                                <input type="submit" value="Müşteri Sil" class="btn btn-primary btn-sm" />
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>